<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bayar.activityBayar">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/kembalibni"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_arrow_white"
                android:background="@color/colorPrimary"
                android:paddingRight="20dp"/>

            <TextView
                android:id="@+id/trans_no_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Metode Pembayaran"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="DETAIL PEMBAYARAN"
        android:gravity="center"
        tools:ignore="RtlHardcoded"
        android:textSize="18dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_id"
            android:textSize="26dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="ID : 1051" />

        <TextView
            android:id="@+id/tv_total"
            android:textSize="26dp"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Rp. 400.000" />




    </LinearLayout>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="VIA TRANSFER BANK BNI"
    android:gravity="center"
    tools:ignore="RtlHardcoded"
    android:textSize="18dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:textColor="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/img_width_height"
        android:layout_height="@dimen/img_width_height"
        android:src="@drawable/bank_bni" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/desc_padding"
        android:paddingRight="@dimen/desc_padding"
        android:text="08523456777"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="Emanuel Krowe"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="80dp"
        android:text="Konfirmasi Pembayaran"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="0823 2656 5597"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_height="wrap_content" />
</LinearLayout>