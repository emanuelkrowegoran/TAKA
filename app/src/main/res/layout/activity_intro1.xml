<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="emanuelkrowegoran.ternakode.Intro.IntroAwal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkblue"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to TAKA Express"
            android:textColor="#fff"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Taka Express merupakan aplikasi pemesanan tiket kapal feri berbasis android dengan rute Nunukan, indonesia menuju Tawau, malaysia maupun sebaliknya. Item menu yang ada di aplikasi ini yaitu informasi,pemesanan, E-Tiket dan pembayaran."
            android:textColor="#fff"
            android:textSize="15sp" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittextstyle"
                android:text="Learn more"
                android:textColor="#fff" />

            <Button
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittextstyle2"
                android:text="Go To Menu"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


